#/bin/sh

caminho="${HOME}/Imagens/Screenshots/"
arquivo="%Y-%m-%d_%H-%M-%S_scrot.png"
icone="/home/henrique/.icons/Arc/devices/24@2x/camera-photo.png"
data=$(date +%Y-%m-%d_%H-%M-%S)
scrot $arquivo -e 'mv $f ~/Imagens/Screenshots/'
notify-send -i $icone "Screenshot" " <b>$caminho${data}_scrot.png</b>"
